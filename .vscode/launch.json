    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Debug main_simple.py - Default",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main_simple.py",
            "args": [
                "--generate-meshes",
                "--mesh-source=liver-sliced.inr", 
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {},
            "python": "${workspaceFolder}/.venv/bin/python"
        },
        {
            "name": "Debug main_simple.py - Multi-label",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main_simple.py",
            "args": [
                "--generate-meshes",
                "--mesh-source=liver-sliced.inr", 
                "--multi-label"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {},
            "python": "${workspaceFolder}/.venv/bin/python"
        },
       
    ]
}